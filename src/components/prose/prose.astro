---
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div
  class:list={[
    "mb-4 prose prose-xl prose-li:m-0 prose-ul:m-0 prose-ul:mb-4 prose-a:underline",
    "prose-h1:text-text prose-headings:font-title",
    "prose-headings:text-text",
    "prose-a:text-text",
    "hover:prose-a:text-primary-hover",
    "prose-strong:text-text prose-strong:font-bold",
    "prose-li:marker:text-text",
    className,
  ]}
>
  <slot />
</div>
